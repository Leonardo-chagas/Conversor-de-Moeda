<Gerenciador>:#:kivy
    BoxLayout:
        orientation:'vertical'
        canvas:
            Color:
                rgba:1,0,0,1
        BoxLayout:
            orientation:'vertical'
            size_hint_y:0.2
            canvas:
                Color:
                    rgba:0.2,0.2,0.2,0.7
                Rectangle:
                    size:self.size
                    pos:self.pos
            Label:
                text:'Conversor de Moedas'
                font_size:'50sp'
        BoxLayout:
            orientation:'horizontal'
            BoxLayout:
                orientation:'vertical'
                size_hint_y: None
                height: 300
                padding: 40,40,40,40
                canvas:
                    Color:
                        rgba:1,0,0,1
                Label:
                    text:'De:'
                    font_size:'20sp'
                DropdownButton:
                    text:'Selecionar moeda para ser convertida'
                    id:moedade
            BoxLayout:
                orientation:'vertical'
                size_hint_y: None
                height: 300
                padding: 40,40,40,40
                Label:
                    text:'Para:'
                    font_size:'20sp'
                DropdownButton:
                    text:'Selecionar moeda para converter'
                    id:moedapara
        BoxLayout:
            orientation:'vertical'
            padding:150,58
            size_hint_y:0.6
            Input:
                id:valor
                font_size:'20sp'
                halign:'right'
                multiline:False
        BoxLayout:
            orientation:'vertical'
            size_hint_y:0.3
            padding: 150,10
            Botao:
                text:'Converter o valor'
                on_press: root.press()
        BoxLayout:
            orientation:'vertical'
            padding: 150, 50
            size_hint_y:0.3
            Label:
                id:resultado